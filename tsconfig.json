{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",                 // 关键：输出 ESModule 格式
    "outDir": "dist",                   // 编译后的输出目录
    "rootDir": "src",                   // 源码目录
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
